
<div id="message-<%= message.id %>" class="message-row d-flex <%= current_user == message.user ? 'justify-content-end' : 'justify-content-start' %>">
    <div class="<%= current_user == message.user ? 'sender' : 'receiver' %>">
      <strong><%= message.user.username %></strong>
      <small>
       <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <p class="chat-content"><%= message.content %></p>
    </div>
</div>
