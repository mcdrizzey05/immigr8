<div class="container">
    <div class="profile-picture">
      <% if current_user.photo? %>
        <%= image_tag(@current_user.photo, class: "profile-image") %>
      <% else %>
        <img src="https://res.cloudinary.com/diafrrnkz/image/upload/v1678366392/Screenshot_2023-03-09_at_13.51.43_ziieip.png" class="profile-image">
      <% end %>
    </div>
    <div class="broader-user-box">
      <i class="fa-solid fa-arrow-left" style="color:#032033"></i>
      <%= link_to "Back to homepage", root_path, class: "back-to-link", style:"color:#032033" %>
      <div class="user-box">
        <div class="user-header">
          <h1>Welcome, <%= @user.first_name %>!</h1>
          <p class="badges-title">Your badges:</p>
            <% if current_user.points < 1 %>
              <p class="new-user">👶 New user! No points yet.</p>
            <% end %>
            <div class="badges">
            <% if current_user.points >= 10 %>
              <p class="badge-align-first">🥉</p>
            <% end %>
            <% if current_user.points >= 21 %>
              <p class="badge-align-second">🥈</p>
            <% end %>
            <% if current_user.points >= 41 %>
              <p class="badge-align-third">🥇</p>
            <% end %>
            <% if current_user.points >= 61 %>
              <p class="badge-align-fourth">🏅</p>
            <% end %>
            <% if current_user.points >= 101 %>
              <p class="badge-align-fifth">🏆</p>
            <% end %>
            <% if current_user.points >= 201 %>
              <p class="badge-align-sixth">🏋🏼</p>
            <% end %>
          </div>
          <div class="user-button">
            <%= link_to user_articles_path do %>
              <i class="fa-regular fa-file-lines fa-xl other-icon"></i></i>
            <% end %>
            <%= link_to favourites_path do %>
              <i class="fa-regular fa-bookmark fa-xl other-icon"></i></i>
            <% end %>
            <%= link_to edit_user_registration_path do %>
            <i class="fa-solid fa-user-pen fa-xl user-icon"></i>
            <% end %>
          </div>
        </div>

      <div class="user-content">
        <div class="row">
          <div class="column">
            <div class="column-header">
              <p>Full Name</p>
            </div>
            <div class="column-text">
              <p><%= @user.first_name  %> <%= @user.last_name %></p>
            </div>
            <div class="column-header">
              <p>Username</p>
            </div>
            <div class="column-text">
              <p><%= @user.username  %></p>
            </div>
            <div class="column-header">
              <p>Email address</p>
            </div>
            <div class="column-text">
              <p><%= @user.email  %></p>
            </div>
            <div class="column-header">
              <p>Location</p>
            </div>
            <div class="column-text">
              <p><%= @user.location%></p></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
    <div class="user-logout">
    <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete},  class: "btn btn-primary" %>
    </div>
  <br>
</div>
