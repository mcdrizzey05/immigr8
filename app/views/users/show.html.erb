<div class="container">
  <div class="profile-picture">
    <% if @user.photo? %>
      <%= image_tag(@user.photo, class: "profile-image") %>
    <% else %>
      <img src="https://res.cloudinary.com/diafrrnkz/image/upload/v1678366392/Screenshot_2023-03-09_at_13.51.43_ziieip.png" class="profile-image">
    <% end %>
  </div>

  <div class="broader-user-box">
    <i class="fa-solid fa-arrow-left" style="color:#032033"></i>
    <%= link_to "Back to articles", root_path, class: "back-to-link", style:"color:#032033" %>
      <div class="user-box">
        <div class="user-header">
        <h1><%= @user.first_name %>'s profile</h1>
        <h5><%= @user.username %></h5>
            <div class="user-button">
            <% @user.points = (@user.articles.count*10) %>
            <p class="view-user-badges">User badges:</p>
              <% if @user.points < 1 %>
                <p class="new-user">👶 New user! No points yet.</p>
              <% end %>
              <div class="badges">
              <% if @user.points >= 10 %>
                <p class="badge-align-first">🥉</p>
              <% end %>
              <% if @user.points >= 21 %>
                <p class="badge-align-second">🥈</p>
              <% end %>
              <% if @user.points >= 41 %>
                <p class="badge-align-third">🥇</p>
              <% end %>
              <% if @user.points >= 61 %>
                <p class="badge-align-fourth">🏅</p>
              <% end %>
              <% if @user.points >= 101 %>
                <p class="badge-align-fifth">🏆</p>
              <% end %>
              <% if @user.points >= 201 %>
                <p class="badge-align-sixth">🏋🏼</p>
              <% end %>
              </div>
            </div>
          </div>



        <div class="user-content">
          <div class="user-articles">
            <%= @user.first_name %>'s articles
          </div>
            <% @user.articles.each do |article| %>
              <li class="article-list">
                <ul><%= link_to article.title, article_path(article.id)%></ul>
              </li>
            <% end %>
        </div>
      </div>
    </div>
</div>
