<div class="container-card px-4">
  <div class="row text-center ">

    <div class="d_flex py-5 px-5">
      <% @articles.each do |article| %>
        <div class="col card mb-4">
          <div class="card-body">
            <%= link_to articles_path(article.id), class:"mb-1 text-decoration-none text-reset" do %>
              <h5 class="card-title"><%= article.title %></h5>
              <p class="my-0"><%= article.content %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
