<div class="container">
  <div class="profile-picture">
    <% if current_user.photo? %>
      <%= image_tag(@current_user.photo, class: "profile-image") %>
    <% else %>
      <img src="https://res.cloudinary.com/diafrrnkz/image/upload/v1678366392/Screenshot_2023-03-09_at_13.51.43_ziieip.png" class="profile-image">
    <% end %>
  </div>


  <div class="user-box">
    <div class="user-header">
      <h1> <%= current_user.first_name %>'s Articles</h1>
    </div>

    <div class="user-content">
      <% @articles.each do |article| %>
        <li class="article-list">
          <ul>
            <%= link_to article.title, article_path(article.id)%>
            <span class="edit-icon">
              <i class="fa-regular fa-pen-to-square fa-xl user-icon"></i>
              <%= link_to articles_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                <i class="fa-regular fa-trash-can fa-xl user-icon blue-icon"></i>
              <% end %>
            </span>
          </ul>
        </li>
      <% end %>
    </div>
